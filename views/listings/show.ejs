<% layout("/layouts/boilerplate")%> 
<div class="row mt-3">
  <div class="col-8 offset-4">
    <h3><%= listing.title %></h3>
    <div class="card col-8 listing-card">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image67890">
      <div class="card-body">
        <p class="card-text"> <b> Owned by : <i><%= listing.owner.username %></i></b> </p>
        <p class="card-text"><%= listing.description %> </p>
        <p class="card-text"> &#8377; <%= listing.price.toLocaleString("en-IN") %> </p>
        <p class="card-text"><%= listing.location %> </p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>
    <div class="btns d-flex align-items-center">
    <a href="/listings/<%= listing._id %>/edit" class="btn  btn-primary me-4 col-1">Edit </a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-danger  ">Delete</button>
    </form>
    </div>
</div>

<div class="col-8 offset-4 mb-3">
  <hr>

  <h4>Leave a Review </h4>
  <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
    </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea name="review[comment]" cols="30" rows="5" id="comment" class="form-control" required></textarea>
      <div class="invalid-feedback">Please add reviews to submit</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <hr>


  <p><b>All Reviews</b></p>
<div class="row">
  <% for(review of listing.reviews) { %>
  <div class="card col-5 mb-3 ms-3">
    <div class="card-body">
    <h5 class="card-title">User Name</h5>
    <p class="card-text"><%= review.comment %></p>
    <p class="card-text"><%= review.rating %> Stars</p>
    </div>
    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="POST">
      <button class="btn btn-sm btn-dark">Delete</button>
    </form>
  </div>
  <% } %>
</div>
  </div>
</div>