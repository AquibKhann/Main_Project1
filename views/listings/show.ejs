<% layout("/layouts/boilerplate")%> 
<div class="row mt-3">
  <div class="col-8 offset-4">
    <h3>Listing Details</h3>
    <div class="card col-8">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image67890">
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br>
          <%= listing.description %> <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
          <%= listing.location %> <br>
          <%= listing.country %>
        </p>
      </div>
    </div>
    <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit this Listing</a>
    <br /><br />
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-danger">Delete this listing</button> <br><br>
    </form>
</div>
</div>